@model IEnumerable<Biblioteca.Data.Entities.Livro>

@{
    ViewData["Title"] = "Catálogo de Livros";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-0"><i class="fas fa-book me-2"></i>@ViewData["Title"]</h2>
        <p class="text-muted">Gerencie o acervo da biblioteca</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Adicionar Livro
    </a>
</div>

@if (Model.Any())
{
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="card-title fw-bold">@item.Titulo</h5>
                            <span class="badge @(item.IsAvailable ? "bg-success" : "bg-danger")">
                                @(item.IsAvailable ? "Disponível" : "Indisponível")
                            </span>
                        </div>
                        
                        <p class="card-text text-muted mb-2">
                            <i class="fas fa-user me-2"></i><strong>Autor:</strong> @item.Autor
                        </p>
                        
                        <p class="card-text text-muted mb-2">
                            <i class="fas fa-calendar me-2"></i><strong>Ano:</strong> @item.AnoPublicacao
                        </p>
                        
                        <p class="card-text text-muted mb-2">
                            <i class="fas fa-barcode me-2"></i><strong>ISBN:</strong> @item.ISBN
                        </p>
                        
                        <p class="card-text text-muted mb-3">
                            <i class="fas fa-boxes me-2"></i><strong>Exemplares:</strong> @item.Stock
                        </p>
                        
                        <div class="d-flex gap-2 flex-wrap">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye me-1"></i>Ver
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">
                                <i class="fas fa-edit me-1"></i>Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                <i class="fas fa-trash me-1"></i>Excluir
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <div class="mb-4">
            <i class="fas fa-book fa-4x text-muted"></i>
        </div>
        <h4 class="text-muted">Nenhum livro encontrado</h4>
        <p class="text-muted">Comece adicionando o primeiro livro ao acervo.</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Adicionar Primeiro Livro
        </a>
    </div>
}
