@model IEnumerable<Biblioteca.Data.Entities.Reserva>

@{
    ViewData["Title"] = "Minhas Reservas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-0"><i class="fas fa-bookmark me-2"></i>@ViewData["Title"]</h2>
        <p class="text-muted">Gerencie suas reservas de livros</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Nova Reserva
    </a>
</div>

@if (Model.Any())
{
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-lg-6 col-xl-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="card-title fw-bold">@item.Livro?.Titulo</h5>
                            <span class="badge @(item.Ativa ? "bg-success" : "bg-secondary")">
                                @(item.Ativa ? "Ativa" : "Cancelada")
                            </span>
                        </div>
                        
                        <p class="card-text text-muted mb-2">
                            <i class="fas fa-user me-2"></i><strong>Leitor:</strong> @item.Leitor?.Nome
                        </p>
                        
                        <p class="card-text text-muted mb-2">
                            <i class="fas fa-calendar me-2"></i><strong>Data da Reserva:</strong> @item.DataReserva.ToString("dd/MM/yyyy")
                        </p>
                        
                        @if (item.DataExpiracao.HasValue)
                        {
                            <p class="card-text text-muted mb-3">
                                <i class="fas fa-clock me-2"></i><strong>Expira em:</strong> @item.DataExpiracao.Value.ToString("dd/MM/yyyy")
                            </p>
                        }
                        
                        <div class="d-flex gap-2 flex-wrap">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye me-1"></i>Detalhes
                            </a>
                            @if (item.Ativa)
                            {
                                <form asp-action="Cancelar" method="post" style="display: inline;">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-outline-warning btn-sm" onclick="return confirm('Tem certeza que deseja cancelar esta reserva?')">
                                        <i class="fas fa-times me-1"></i>Cancelar
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <div class="mb-4">
            <i class="fas fa-bookmark fa-4x text-muted"></i>
        </div>
        <h4 class="text-muted">Nenhuma reserva encontrada</h4>
        <p class="text-muted">Comece fazendo sua primeira reserva de livro.</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Fazer Primeira Reserva
        </a>
    </div>
}
