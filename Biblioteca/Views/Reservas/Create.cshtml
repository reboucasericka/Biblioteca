@model Biblioteca.Data.Entities.Reserva

@{
    ViewData["Title"] = "Nova Reserva";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="LivroId" class="control-label">Livro</label>
                <select asp-for="LivroId" class="form-control" asp-items="ViewBag.Livros">
                    <option value="">Selecione um livro</option>
                </select>
                <span asp-validation-for="LivroId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Criar Reserva" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
